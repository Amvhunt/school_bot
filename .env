# Bot Configuration
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Database Configuration
DATABASE_URL=postgresql://postgres:password@192.168.8.185:5432/school_admin_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-characters

# Payment Providers
# Monobank
MONOBANK_TOKEN=your_monobank_token
MONOBANK_WEBHOOK_URL=https://your-domain.com/webhook/monobank

# PrivatBank
PRIVATBANK_MERCHANT_ID=your_merchant_id
